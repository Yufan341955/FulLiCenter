<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ucai.cn.fulicenter.activity.RegisterActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff">
        <LinearLayout
            android:id="@+id/backAuto"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:src="@mipmap/back_press"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="账户注册"
            android:textSize="20sp"
            android:textColor="#000"/>
    </RelativeLayout>
    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/et_user"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="用户名"
        android:background="#fff"
        android:drawableRight="@drawable/icon_account"
        />
    <EditText
        android:layout_marginTop="3dp"
        android:id="@+id/et_nick"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="昵称"
        android:background="#fff"
        android:drawableRight="@drawable/icon_account"
        />
    <EditText
        android:id="@+id/et_password"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"
        android:drawableRight="@drawable/icon_pwd"
        android:hint="密码"
        android:password="true"/>
    <EditText
        android:id="@+id/et_password_ok"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"
        android:drawableRight="@drawable/icon_pwd"
        android:hint="确认密码"
        android:password="true"/>
    <Button
        android:id="@+id/btn_Register"
        android:layout_width="320dp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:background="@color/good_detail_title_bg"
        android:text="免费注册"
        android:textColor="#fff"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
